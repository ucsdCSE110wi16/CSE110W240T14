<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="edu.etduongucsd.dopeshit.NoteList"
    tools:showIn="@layout/activity_main"
    android:background="#C8E3FF">

    <ListView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/notesList"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#C8E3FF"
        android:divider="#72a6f9"
        android:dividerHeight="1dp"
        android:drawSelectorOnTop="false"
        android:footerDividersEnabled="true"
        android:textFilterEnabled="false"
        android:paddingTop="95dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Lecture 1"
        android:id="@+id/noteListTitle"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/notesList"
        android:layout_alignEnd="@+id/notesList"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="30sp"
        android:textAlignment="center"
        android:textColor="#fdfd96"
        android:background="#AAC5E2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Class:"
        android:id="@+id/noteForClass"
        android:layout_below="@+id/noteListTitle"
        android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="true"
        android:paddingTop="15dp"
        android:textColor="#fdfd96"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="CSE 110"
        android:layout_below="@+id/noteListTitle"
        android:id="@+id/classNote"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:textColor="#fdfd96"
        android:paddingTop="15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Professor:"
        android:id="@+id/noteForProf"
        android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/noteForClass"
        android:textColor="#fdfd96"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Kesden"
        android:id="@+id/noteProf"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/classNote"
        android:textColor="#fdfd96"/>

</RelativeLayout>
