<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="edu.etduongucsd.dopeshit.WeekLectureSelection"
    tools:showIn="@layout/activity_week_lecture_selection"
    android:background="#C8E3FF">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="CSE 110"
        android:id="@+id/classPageTitle"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textAlignment="center"
        android:textColor="#fdfd96"
        android:textSize="24sp"
        android:background="#AAC5E2" />

    <ExpandableListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/expWeekList"
        android:layout_below="@+id/classPageTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:divider="#72a6f9"
        android:dividerHeight="1dp"
        android:indicatorLeft="?android:attr/expandableListPreferredChildIndicatorLeft"/>
</RelativeLayout>
